<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <link rel="stylesheet" href="styles/style.css">
    <link rel="stylesheet" href="styles/footer.css">
    <link rel="stylesheet" href="styles/header.css">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="create-container">
        <form action="changePost" method="post">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= data.title %>">
        
            <label for="subtitle">Subtitle</label>
            <input type="text" id="subtitle" name="subtitle" value="<%= data.subtitle %>">
        
            <label for="imgLink">Image link</label>
            <input type="url" id="imgLink" name="imgLink" value="<%= data.image_url %>">
        
            <label for="body">Subject</label>
            <textarea id="body" name="body" style="height:200px"><%= data.body %></textarea>

            <input type="hidden" name="post-number" value=<%= postNumber %> />
        
            <input class="button" type="submit" value="Submit" style="margin-top: 20px;">
          </form>
    </div>
      
    <%- include("partials/footer.ejs") %>
</body>
</html>